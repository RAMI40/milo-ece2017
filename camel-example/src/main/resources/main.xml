<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
         http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
         http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <camelContext id="CamelMiloExample"
        xmlns="http://camel.apache.org/schema/spring">

        <route id="led">
            <from uri="milo-client:tcp://{{plc.host}}:{{plc.port}}?node=RAW(ns=1;i=50193)&amp;overrideHost=true" />
            <to uri="stream:out"/>
            <transform><simple>${body.value.value}</simple></transform>
            <to uri="my-milo:FooBar"/>
        </route>

        <route id="server2">
            <from uri="my-milo:FooBar" />
            <transform><simple>From Client: ${body}</simple></transform>
            <to uri="stream:out"/>
        </route>


    </camelContext>

</beans>